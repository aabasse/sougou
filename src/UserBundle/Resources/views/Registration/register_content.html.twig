{% trans_default_domain 'FOSUserBundle' %}

{% if is_granted('IS_AUTHENTICATED_FULLY') == false %}
<div class="cadre-ombre inline-block col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
	{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
	    {{ form_widget(form) }}
	    <div class="text-center margin-top col-xs-12">
	        <input type="submit" value="{{ 'registration.submit'|trans }}" />
	    </div>
	{{ form_end(form) }}
	<p>
		<i>Vous disposez d'un droit d'accès et de rectification des données communiquées
		<br/>(Loi informatique et libertés du 06/01/1978).</i>
	</p>
</div>
{%else%}
	<div class="margin-top">
		<div class="message-robot">
				<p class="message-content message-erreur">Vous êtes déjà connecté..
				</p>
		</div>
	</div>
{% endif %}