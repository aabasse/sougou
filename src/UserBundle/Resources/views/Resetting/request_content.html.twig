{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="text-center fos_user_resetting_request">
    <div>
        <label for="username">{{ 'resetting.request.username'|trans }}</label>
        <input type="text" id="username" name="username" required="required" />
        {% if invalid_username is defined %}
            <p class="erreur">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
        {% endif %}
    </div>
    <div>
        <input type="submit" value="{{ 'resetting.request.submit'|trans }}" />
    </div>
</form>

<div class="message-robot margin-top">
    <p class="message-content message-alert">Alors, comme ça ! On est un peu étourdi.. &#128518; Ne vous inquiétez pas, vous avez la possibilité de créer un nouveau mot de passe &#128521;
    </p>
</div>
