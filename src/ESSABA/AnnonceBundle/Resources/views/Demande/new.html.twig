{% extends "ESSABAAnnonceBundle::layout.html.twig" %}

{% block superTitre %}Faire une demande | {% endblock %}
{% block description %}ici, pour faire une demande sur Mali.{% endblock %}

{% block titre %}Faire une demande pour <strong>Mali</strong> {% endblock %}


{% form_theme form _self %}
{% block submit_widget %}
<div class="col-xs-12 text-center padding-10">
    {%- set type = type|default('submit') -%}
    {{ block('button_widget') }}
</div>
{% endblock submit_widget %}
{% block cont %}

<div id="contForm">
{{ form_start(form) }}
	<div class="col-xs-12 group">
		<h3 class='col-xs-12'><i class="fa fa-circle-thin"></i> Informations sur la demande</h3>
		{{ form_row(form.titre) }}
		{{ form_row(form.detail) }}
	</div>

	<div class="col-xs-12 group">
		<h3 class='col-xs-12'><i class="fa fa-picture-o"></i> Images (optionnel)</h3>
		<div class="col-xs-12">
			<div class="contInputImage">
		        <div class="contImgApercu vertical">
		        	<div class="vertical-middle">
		        		<img alt='ajouter une image' src="{{asset('images/icons/add-image-48.png')}}" >
		        	</div>
		        </div>
				{{ form_label(form.image1) }}
				{{ form_widget(form.image1) }}
				
			</div>
			<div class="contInputImage">
		        <div class="contImgApercu vertical">
		        	<div class="vertical-middle">
		        		<img alt='ajouter une image' src="{{asset('images/icons/add-image-48.png')}}" >
		        	</div>
		        </div>
				{{ form_label(form.image2) }}
				{{ form_widget(form.image2) }}
				
			</div>
			<div class="contInputImage">
		        <div class="contImgApercu vertical">
		        	<div class="vertical-middle">
		        		<img alt='ajouter une image' src="{{asset('images/icons/add-image-48.png')}}" >
		        	</div>
		        </div>
				{{ form_label(form.image3) }}
				{{ form_widget(form.image3) }}
				
			</div>
		</div>
		<div class="col-xs-12 erreur">
			{% if(form_errors(form.image1)|length > 0 ) %}
				Erreur pour l'image principal : {{ form_errors(form.image1) }}
			{% endif %}
			{% if(form_errors(form.image2)|length > 0 ) %}
				Erreur pour l'image 2 : {{ form_errors(form.image2) }}
			{% endif %}
			{% if(form_errors(form.image3)|length > 0 ) %}
				Erreur pour l'image 3 : {{ form_errors(form.image3) }}
			{% endif %}
		</div>
	</div>

	{{ form_widget(form) }}


	<div class="col-xs-12 text-center"><button class="bt"><i class="fa fa-bullhorn"></i> Publier la demande</button></div>
{{ form_end(form) }}

</div>
<div class="col-xs-offset-2 col-xs-10 padding-10">
	<i class="fa fa-info-circle"></i> ( <span class='color-blue'>*</span> ) champs obligatoire
</div>
{% endblock %}

{% block javascripts %}
<script src="{{asset('js/vendre.js')}}" type="text/javascript"></script>
{% endblock %}
